{
  "appId": "com.dadrocktabs.app",
  "appName": "DadRock Tabs",
  "webDir": "build",
  "server": {
    "url": "https://dadrocktabs.com",
    "cleartext": false,
    "androidScheme": "https",
    "allowNavigation": ["dadrocktabs.com", "*.dadrocktabs.com", "*.youtube.com", "youtube.com"]
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#09090b",
      "showSpinner": false
    }
  },
  "android": {
    "allowMixedContent": false,
    "backgroundColor": "#09090b",
    "captureInput": true,
    "webContentsDebuggingEnabled": false
  }
}
